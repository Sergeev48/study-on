{% extends 'base.html.twig' %}

{% block title %}Курсы / StudyOn{% endblock %}

{% block body %}
    <h1>Список курсов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}">{{ course.name }}</a>
                </td>

                {% if course.description %}
                    <td>{{ course.description }}</td>
                {% else %}
                    <td>Курс без описания.</td>
                {% endif %}

            </tr>
        {% else %}
            <tr>
                <td colspan="5">Курсы не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_new') }}">Добавить новый курс</a>
{% endblock %}
