{% extends 'base.html.twig' %}

{% block title %}{{ course.name ~ ' / StudyOn' }}{% endblock %}

{% block body %}
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                crossorigin="anonymous"></script>
    </head>
    <h1 class="course-name">{{ course.name }}</h1>
    <div class="glass-bg p-4">
        {% if course.description %}
            <p class="course-description">{{ course.description }}</p>
        {% else %}
            <p class="course-description">Курс без описания</p>
        {% endif %}
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <div class="d-flex">
                <a class="btn btn-outline-primary mb-2 me-2" role="button"
                   href="{{ path('app_course_edit', {'id': course.id}) }}">Изменить курс</a>
                {{ include('course/_delete_form.html.twig') }}
            </div>
        {% endif %}

        <h5>Содержание курса</h5>
        {% for lesson in course.lessons|sort((a, b) => a.number <=> b.number) %}
            <li style="list-style-type: none;">
                {% if owned == true %}
                    <a class="text-decoration-none lesson" href="{{ path('app_lesson_show', { 'id' : lesson.id }) }}">
                        {{ lesson.number ~ '. ' ~ lesson.name }}
                    </a>
                {% endif %}
                {% if owned == false %}
                    <a class="text-decoration-none lesson disabled" href="#">
                        {{ lesson.number ~ '. ' ~ lesson.name }}
                    </a>
                {% endif %}
            </li>
        {% else %}
            <li style="list-style-type: none;">
                Список уроков пуст
            </li>
        {% endfor %}
        <div class="d-flex">
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a class="btn btn-outline-primary mt-2" role="button"
                   href="{{ path('app_lesson_new', {'id': course.id }) }}">Добавить урок</a>
            {% endif %}
            <a class="btn btn-outline-primary mt-2 ms-auto" role="button" href="{{ path('app_course_index') }}">Вернуться
                к курсам</a>
            {% if owned == false and disabled == false%}
                <a class="btn-outline-success btn mt-2 ms-2 " type="button" data-bs-toggle="modal"
                   data-bs-target="#exampleModal">Купить курс</a>
                <!-- Modal -->
                <div class="modal" data-backdrop="false" id="exampleModal" tabindex="-1"
                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Подтвердите покупку</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Вы уверены, что хотите приобрести этот курс?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                                <form action="{{ path('app_course_buy', {'id': course.id}) }}" method="POST">
                                    <button type="submit" class="btn btn-primary">
                                        Приобрести доступ к курсу
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <a class="btn-outline-secondary btn mt-2 ms-2 disabled" type="button">Купить курс</a>
            {% endif %}
        </div>


    </div>
    <style>
        .glass-bg {
            /* From https://css.glass */
            background: rgba(255, 255, 255, 0.6);
            border-radius: 16px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(11.2px);
            -webkit-backdrop-filter: blur(11.2px);
            border: 1px solid rgba(255, 255, 255, 0.16);
        }

        .disabled {
            pointer-events: none;
            cursor: default;
            opacity: 0.6;
        }

        .modal-backdrop.show {
            z-index: -1;
            opacity: 0;
        }
    </style>

{% endblock %}
