{% extends 'base.html.twig' %}

{% block title %}{{ course.name ~ ' / StudyOn' }}{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ course.description }}</td>
            </tr>
        </tbody>
    </table>

            {% for lesson in course.lessons|sort((a, b) => a.number <=> b.number) %}
                <li>
                    <a class="link-secondary lesson" href="{{ path('app_lesson_show', { 'id' : lesson.id }) }}">
                        {{ lesson.number ~ '. ' ~ lesson.name }}
                    </a>
                </li>
        {% else %}
            <li>
                Список уроков пуст
                <a class="link-info" href="{{ path('app_lesson_new', {'course': course.id }) }}">Добавить</a>
            </li>
        {% endfor %}


    <a href="{{ path('app_course_index') }}">Вернуться к курсам</a>
    <a href="{{ path('app_lesson_new', {'id': course.id }) }}">Добавить урок</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Изменить</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
