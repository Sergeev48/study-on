{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="container">
        <div class="login-page" style="padding: 5% 0 0">
            <div class="form">
                <div class="login-form">
                    <h1>Регистрация</h1>

                    {{ form_start(registrationForm) }}
                    {{ form_widget(registrationForm.email) }}
                    {{ form_errors(registrationForm.email) }}
                    {{ form_widget(registrationForm.password) }}
                    {{ form_errors(registrationForm) }}
                    <div class="info m-0 pb-0" style="background: none">

                        {{ form_widget(registrationForm.agreeTerms) }}
                        <label for="registration_form_agreeTerms" class="">Согласие на обработку
                            данных</label>
                    </div>

                    <br>
                    <button type="submit" class="form-button">Зарегистрироваться</button>
                    {{ form_end(registrationForm) }}
                    <p class="message">Уже есть аккаунт? <a href="{{ path('app_login') }}">Войти</a></p>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
