{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name ~ ' / ' ~ lesson.course.name ~ ' / StudyOn' }}{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ lesson.name }}</td>
            </tr>
            <tr>
                <th>Содержание</th>
                <td>{{ lesson.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">Вернуться к курсу</a>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Изменить</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
