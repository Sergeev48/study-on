{% extends 'base.html.twig' %}

{% block title %}История транзацкий{% endblock %}

{% block body %}
    <div class="container">
        <p class="border border-3 rounded rounded-3 h1 text-center mt-2"> Ваши транзакции</p>
        <table class="table table-light mt-5">
            <thead>
            <tr>
                <th scope="col">Номер транзакции</th>
                <th scope="col">Время</th>
                <th scope="col">Тип</th>
                <th scope="col">Сумма</th>
                <th scope="col">Код курса</th>
            </tr>
            </thead>
            <tbody>
            {% for transaction in transactions %}
                <tr>
                    <th scope="row" class="{{ transaction.type == 'deposit' ? 'text-bg-success' : 'text-bg-light'}}">
                        {{ transaction.id }}
                    </th>
                    <td class="{{ transaction.type == 'deposit' ? 'text-bg-success' : 'text-bg-light'}}">
                        {{ transaction.created_at }}
                    </td>
                    <td class="{{ transaction.type == 'deposit' ? 'text-bg-success' : 'text-bg-light'}}">
                        {{ transaction.type }}
                    </td>
                    <td class="{{ transaction.type == 'deposit' ? 'text-bg-success' : 'text-bg-light'}}">
                        {{ transaction.amount }}
                    </td>
                    {% if transaction.course_code is defined and transaction.course_code is not empty %}
                        <td class="text-bg-light">{{ transaction.course_code }}</td>
                    {% else %}
                        <td class="text-bg-success">---</td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}